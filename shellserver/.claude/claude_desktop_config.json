{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/path/to/Desktop",
                "/path/to/Downloads"
            ]
        },
        "langgraph-docs-mcp": {
            "command": "/path/to/python/scripts/uvx",
            "args": [
                "--from",
                "/project/path/to/mcpdoc",
                "mcpdoc",
                "--urls",
                "LangGraph:https://langchain-ai.github.io/langraph/llms.txt",
                "--transport",
                "stdio",
                "--port",
                "8081",
                "--host",
                "localhost"
            ]
        },
        "shell": {
            "command": "/path/to/python/scripts/uv",
            "args": [
                "--directory",
                "/project/path/to/shellserver",
                "run",
                "server.py"
            ]
        },
        "pii-handler": {
            "command": "/path/to/python/scripts/uv",
            "args": [
                "--directory",
                "/project/path/to/lang-chain-mcp-adapters",
                "run",
                "servers/pii_server.py"
            ],
            "tools": {
                "sanitize_input": {
                    "description": "Sanitize input text by masking PII",
                    "parameters": {
                        "text": "Input text containing PII",
                        "session_id": "Session identifier for tracking PII mappings"
                    }
                },
                "restore_pii": {
                    "description": "Restore original PII values in the text",
                    "parameters": {
                        "text": "Text with masked PII",
                        "session_id": "Session identifier for retrieving PII mappings"
                    }
                },
                "process_with_pii": {
                    "description": "Complete PII processing flow: sanitize, process, and restore PII",
                    "parameters": {
                        "text": "The input text containing PII",
                        "session_id": "Session identifier for tracking PII mappings"
                    }
                }
            }
        }
    },
    "preprocessing": {
        "enabled": true,
        "pipeline": [
            {
                "server": "pii-handler",
                "tool": "sanitize_input",
                "description": "First sanitize any PII in the input",
                "parameters": {
                    "session_id": {
                        "type": "auto_generate",
                        "prefix": "claude_",
                        "include_timestamp": true
                    }
                }
            }
        ]
    },
    "postprocessing": {
        "enabled": true,
        "pipeline": [
            {
                "server": "pii-handler",
                "tool": "restore_pii",
                "description": "Finally restore any PII in the output",
                "parameters": {
                    "session_id": {
                        "type": "inherit",
                        "from": "preprocessing"
                    }
                }
            }
        ]
    }
}